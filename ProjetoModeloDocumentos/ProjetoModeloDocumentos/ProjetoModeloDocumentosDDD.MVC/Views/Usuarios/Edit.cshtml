@model ProjetoModeloDocumentosDDD.MVC.ViewModels.UsuarioViewModel

@{
    ViewBag.Title = "Edit";
}

@if (Session["LogarUserIdComun"] != null)
{
    <h2 class="title text-center">Editar minha conta</h2>

    
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.UsuarioId)

            <div class="col-sm-9 padding-right">
                <div class="product-details">
                    <!--product-details-->
                    <div class="col-sm-5">
                        <div class="view-product">
                            <center><img src="~/Content/img/semFoto.jpg" alt="" /></center>
                        </div>
                    </div>
                    <div class="col-sm-7">
                        <div class="product-information">
                            <!--/product-information-->
                            <img src="" alt="" />
                            <p>
                                Nome:
                                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                            
                                Sobrenome:
                                @Html.EditorFor(model => model.SobreNome, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SobreNome, "", new { @class = "text-danger" })
                            
                                CPF:
                                @Html.EditorFor(model => model.Cpf, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Cpf, "", new { @class = "text-danger" })
                            
                                E-mail:
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                           
                                CEP:
                                @Html.EditorFor(model => model.Cep, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Cep, "", new { @class = "text-danger" })
                           
                                Usuário:
                                @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                            
                                Senha:
                                @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                            
                                Confirme a senha:
                                @Html.EditorFor(model => model.ConfirmaPassword, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ConfirmaPassword, "", new { @class = "text-danger" })
                               
                                Telefone:
                                @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Telefone, "", new { @class = "text-danger" })
                                <br />
                                <input type="submit" value="Salvar" class="btn btn-default" />

                        </div><!--/product-information-->
                    </div>
                </div>
            </div><!--/product-details-->
            
            
        </div>
        }

        <div>
            @Html.ActionLink("Retornar", "LoginSucessUser", "Home")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }

        }
        else
        {
        <text>
            Login Obrigatorio!
        </text>
        }
